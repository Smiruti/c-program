#include <stdio.h>
int main() {
    int i, j;
    int n;
    printf("Enter the number of rows for the pyramid: ");
    scanf("%d", &n);
    for (i = 1; i <= n; i++) {
        // Print stars
        for (j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
